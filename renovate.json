{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "dependencyDashboardAutoclose": true,
  "extends": ["config:base"],
  "packageRules": [
    {
      "automerge": true,
      "groupName": "minor",
      "matchDepTypes": ["dependencies", "dev", "test", "types"],
      "matchUpdateTypes": [
        "bump",
        "digest",
        "lockFileMaintenance",
        "minor",
        "patch",
        "pin",
        "rollback"
      ],
      "semanticCommitType": "chore"
    }
  ],
  "schedule": ["every weekend"]
}
